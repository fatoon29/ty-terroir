<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Ty-Terroir!{% endblock %}</title>

    {% block stylesheets %}
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('assets/mdb/css/mdb.min.css') }}">
    <!-- MDB PLUGINS -->
    <link rel="stylesheet" href="{{ asset('assets/mdb/plugins/css/all.min.css') }}">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    <!-- MDB ESSENTIAL -->
    <script type="text/javascript" src="{{ asset('assets/mdb/js/mdb.min.js') }}"></script>
    <!-- MDB PLUGINS -->
    <script type="text/javascript" src="{{ asset('assets/mdb/plugins/js/all.min.js') }}"></script>
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Navbar brand -->
                <a class="navbar-brand mt-2 mt-lg-0" href="#">
                    <img src="https://mdbcdn.b-cdn.net/img/logo/mdb-transaprent-noshadows.webp" height="15"
                        alt="MDB Logo" loading="lazy" />
                </a>
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('association_index') }}">Les associations</a>
                    </li>
                {% endif %}
                </ul>
                <!-- Left links -->
            </div>
            <!-- Collapsible wrapper -->

            <!-- Right elements -->
            <div class="d-flex align-items-center">
                {% if app.user %}
                <!-- Icon -->
                <a class="text-reset me-3" href="#">
                    <i class="fas fa-shopping-cart"></i>
                </a>

                <a>
                    Bonjour {{app.user.firstname}}  
                </a>
                {% else %}
                <a href="/login">
                    <img src="{{ asset("build/assets/images/login.png") }}"  height="25"
                    alt="login" loading="lazy" />
                </a>
                {% endif %}

                <!-- Avatar -->
                <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#" id="navbarDropdownMenuLink"
                    role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                    {% if app.user %}
                    <img src="{{ 'http://localhost:8055/assets/' ~ app.user.avatar}}"  height="25"
                        alt="{{app.user.firstname}}" loading="lazy" />
                    {% endif %}   
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                    
                    <li>
                        <a class="dropdown-item" href="#">My profile</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
            <!-- Right elements -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
    {% block body %}{% endblock %}
</body>

</html>