{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}

	<h1 class="mt-5 mb-5 text-center">Bonjour
		{{app.user.firstname}}
	</h1>
<div class="container my-5 p-5 shadow-5">
	<div class="row">
		<div class="col-lg-5 mb-4 mb-lg-0 pb-2 pb-lg-0 pb-xl-2">
			<div class="bg-image">
				<img src="{{ 'http://localhost:8055/assets/' ~ app.user.avatar ~ '?width=300&height=300'}}" class="img-fluid rounded-circle shadow-1-strong " alt="Sample image"/>
			</div>
		</div>
		<div class="col-lg-7">
			<h4 class="mb-3">{{app.user.firstname}} {{app.user.lastname}}</h4>
			<p class="lead mb-1"> <b>Email : </b> {{app.user.email}} </p>
			<p class="lead mb-1"> <b>Adhésion en cours : </b>  </p>
			<ul>
				{% for subscription in subscriptions %}
				{% if subscription.status == 'published' %}
					<li>
					{{subscription.association.name}} depuis le {{subscription.subscriptionDate|format_datetime('short', 'none', locale='fr') }}
					</li>
				{% else %}
				<p>Pas d'adhésion active</p>
				{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
{% endblock %}
